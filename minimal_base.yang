module minimal_base {
  yang-version "1";

  // namespace
  namespace "http://minimal-base";

  prefix "base";

  container base_container {
    leaf id {
      description
      "Test Description";
      type uint32;
    }
    leaf super_id {
      description
      "Test Description";
      type super_id_value;
    }
    typedef super_id_value {
      description "Test Type";
      type uint32;
    }
    choice turn_into_enum {
      case yes {
        leaf ok {
          type uint32;
        }
      }
      case no {
        leaf not_ok {
          type uint32;
        }
      }
    }
    choice turn_into_enum_2 {
      leaf always {
        type uint32;
      }
    }
    leaf measurement-type {
      type enumeration {
        enum lmm {
          description
            "LMM SOAM PDU generated and received LMR responses tracked.";
        }
        enum slm {
          description
            "SLM SOAM PDU generated and received SLR responses tracked.";
        }
        enum ccm {
          description
            "CCM SOAM PDU generated and received CCM PDUs tracked.";
        }
      }
      default slm;

      description
        "This object specifies what type of Loss Measurement will be
         performed.";
      reference
        "MEF-SOAM-PM-MIB.mefSoamLmCfgType";
    }
    list id_info {
      description
      "Test Description";
      leaf pass {
        description
        "Test Description";
        type uint32;
      }
  }
}
}
